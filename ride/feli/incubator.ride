@Callable(i)
func startHatching(refererAddress: String) = {
  strict feeValidate = checkAdditionalPayment(i.payments[0])
  #TODO: add validation that feeValidate payment is added!
  if (isLocked() > 0) then {
    throw("EGG operations are temporarily locked")
  } else {
    let totalFelineAmount = tryGetInteger("felines_amount")
    let eggsNeeded = countEggsNeededAmount(totalFelineAmount)


    let results = [
        StringEntry(getHatchingStatusKey(i.originCaller.toString(), i.transactionId), HatchingStarted),
        IntegerEntry(getHatchingFinishHeightKey(i.originCaller.toString(), i.transactionId), height + delayForHatching),
        IntegerEntry("felines_amount", totalFelineAmount + 1),
        IntegerEntry("felines_last_price", eggsNeeded / 1500000)
      ]

    let leftToPay = eggsNeeded
    let firstPayment = i.payments[1].value()
    if (firstPayment.assetId != getPeteAssetId()) then throw("TB: You can attach only EGG tokens with the following asset id: " + getPeteAssetId().toBase58String()) else 
    if (firstPayment.amount < leftToPay) then throw("TB: To breed a Feline you following amount of EGGlets: " + leftToPay.toString()+ " "+i.caller.toString()) else
    strict addMore = invoke(getFelineStakingAddress(), "addPeteAndStakeMore", [], [AttachedPayment(getPeteAssetId(), leftToPay)])

    let refund = if size(i.payments) == 2 then [ScriptTransfer(i.caller, i.payments[1].amount - leftToPay, getPeteAssetId())] else []

      results ++ refund++feeValidate

  }
}


@Callable(i)
func finishHatching(txIdStr: String) = {
  strict feeValidate = checkAdditionalPayment(i.payments[0])
  #TODO: add validation that feeValidate payment is added!
  let txId = fromBase58String(txIdStr)
  let hatchingStatusKey = getHatchingStatusKey(i.caller.toString(), txId)
  let finishHeightKey = getHatchingFinishHeightKey(i.caller.toString(), txId)
  let FelineIdKey = getFelineIdKey(i.caller.toString(), txId)

  let hatchingTxStatus = getStringValue(this, hatchingStatusKey)
  let hatchingFinishHeight = getIntegerValue(this, finishHeightKey)
  
  if (hatchingTxStatus == HatchingFinished) then {
    let FelineId = getStringValue(this, getFelineIdKey(i.caller.toString(), txId))
    throw("The Feline was hatched and claimed already, here is the folowing: " + FelineId)
  } else 
    if (hatchingFinishHeight > height) then throw("Hatching is not finished yet " + (hatchingFinishHeight - height).toString() + " blocks remaining, it will take around " +  (hatchingFinishHeight - height).toString() + " minutes")
    else {
      let (FelineGen, farmGen) = getRandomName(txId, hatchingFinishHeight, false)
      let description = "{\"genotype\": \"" + FelineGen + "\", \"crossbreeding\": true}"

      let asset = Issue(FelineGen, description, 1, 0, false, unit, hatchingFinishHeight)
      let assetId = asset.calculateAssetId()

      let amount = tryGetInteger(getFelineStatsKey(FelineGen)) + 1

      [
        StringEntry(hatchingStatusKey, HatchingFinished),
        StringEntry(FelineIdKey, assetId.toBase58String()),
        StringEntry(assetId.toBase58String(), FelineIdKey),
        IntegerEntry(getFelineStatsKey(FelineGen), amount),
        IntegerEntry("stats_"+farmGen+"_quantity", tryGetInteger("stats_"+farmGen+"_quantity") + 1),
        asset,
        ScriptTransfer(i.caller, 1, assetId)
      ]++feeValidate
    }
}


